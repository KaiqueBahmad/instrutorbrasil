# =========================
# Spring Boot
# =========================
SERVER_PORT=8080

# =========================
# Database (Postgres)
# =========================
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_NAME=instrutoresbrasil
DB_EXTERNAL_PORT=5435
DB_HOST=jdbc:postgresql://db:5432/instrutoresbrasil

# =========================
# Redis
# =========================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=password
REDIS_DATABASE=16

# =========================
# Mail
# =========================
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=no-reply@example.com
MAIL_NAME=InstrutorBrasil
MAIL_PASSWORD=password
# Set to true in development to mock email sending (it'll log at the console instead)
MAIL_MOCK=true

# =========================
# OAuth Google (Optional)
# =========================
GOOGLE_CLIENT_ID=google-client-id
GOOGLE_CLIENT_SECRET=google-client-secret

# =========================
# Frontend
# =========================
FRONTEND_URL=http://localhost:3000

# =========================
# JWT
# =========================
JWT_SECRET=change-me-please

# =========================
# Rate limit
# =========================
RATE_LIMIT_STORAGE=REDIS

# =========================
# AWS / S3 (LocalStack)
# =========================
AWS_REGION=us-east-1
AWS_S3_BUCKET=instrutorbrasil-documents
AWS_S3_PRESIGNED_URL_EXPIRATION_MINUTES=15
AWS_S3_MAX_FILE_SIZE_MB=10
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
# Only when using LocalStack
AWS_ENDPOINT_OVERRIDE=http://localstack:4566
